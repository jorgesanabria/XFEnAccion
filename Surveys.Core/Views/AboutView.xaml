<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Surveys.Core.Views.AboutView">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="10">
            <Label Text="Encuestas" FontSize="Large"/>
            <Label Text="Una aplicacion de ejemplo del libro"/>
            <Label Text="Xamarin Frorms en accion: Aplicaciones de negocio"/>
            <Label Text="Escrito por Rodrigo Dias Concha"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>